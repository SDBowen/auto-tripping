<%= form_for trip do |f| %>
  <% if trip.errors.any?  %>
    <% trip.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: 'Scheduler Notification', sticky: false)  %>
    <% end %>
  <% end %>
  <% time = next_time_needed(trip) %>
  <div class="row">
    <div class='col'>
      <div class="row mt-5">
        <div class="form-group">
          <% if time == :signature %>
            <canvas id="canvas"></canvas>
            <%= f.hidden_field time, class:"form-control", id: "signature-input"%>
          <% else %>
            <%= f.label time %>
            <%= f.time_select time, ampm: true, include_blank: true, class:"form-control"%>
          <% end %>
        </div>
      </div>
      <div class="row mt-3">
        <%= f.submit 'Save', class: 'btn btn-primary btn-block mt-3', id: 'driver_edit_submit' %>
      </div>
    </div>
  </div>
<% end %>
