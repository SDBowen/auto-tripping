<!DOCTYPE html>
<html>
  <head>
    <title>Scheduler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <% if current_user %>
            <%= render 'shared/nav' %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
    <%= js add_gritter(flash[:notice], title: 'Scheduler Notification', sticky: false)  %>
  </body>
</html>
